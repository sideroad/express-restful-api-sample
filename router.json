{
  "group": {
    "name": {
      "required": true,
      "uniq": true,
      "regexp": "^[a-zA-Z\\s_-\\d]+$"
    },
    "members": {
      "children": "member"
    },
    "owner": {
      "instance": "member"
    }
  },
  "member": {
    "name": {
      "required": true,
      "uniq": true,
      "regexp": "^[a-zA-Z\\s_-\\d\\.]+$"
    },
    "group": {
      "parent": "group"
    },
    "absents": {
      "children": "absent"
    }
  },
  "absent": {
    "member": {
      "uniq": true,      
      "parent": "member"
    },
    "date": {
      "required": true,
      "uniq": true,
      "regexp": "^\\d\\d\\d\\d-\\d\\d-\\d\\d$"
    },
    "start": {
      "required": true,
      "regexp": "^\\d\\d:\\d\\d$"
    },
    "end": {
      "required": true,
      "regexp": "^\\d\\d:\\d\\d$"
    },
    "reason": {
      "regexp": "^[a-zA-Z\\s_-\\d\\.\\,\\'\\\"\\[\\]\\/]*$"
    }
  }
}